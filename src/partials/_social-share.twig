{% if 'post' in template or 'blog' in template %}
  {% set permalink_url = canonical_url %}
  {% set share_title = post.title | escape %}
{% elseif 'product' in template %}
  {% set permalink_url = canonical_url %}
  {% set share_title = product.name | escape %}
{% elseif template == 'password' %}
  {% set permalink_url = canonical_url %}
  {% set share_title = store.name | escape %}
{% endif %}

<div class="post-page__social-share">
  <div class="post-page__social-sharing" data-permalink="{{ permalink_url }}">
  {% if settings.share_facebook %}
    <a target="_blank" href="//www.facebook.com/sharer.php?u={{ permalink_url }}" class="btn btn-xs btn-primary post-page__share-facebook share-facebook" title="Compartir en Facebook">
      <span class="mdi mdi-facebook" aria-hidden="true"></span>Compartir</a>
  {% endif %}
  {% if settings.share_twitter %}
    <a target="_blank" href="//twitter.com/share?text={{ share_title }}&amp;url={{ permalink_url }}" class="btn btn-xs btn-primary post-page__share-twitter share-twitter" title="Tuitear en Twitter">
      <span class="mdi mdi-twitter" aria-hidden="true"></span>Tuitear</a>
  {% endif %}
  {% if product.image_url or post.image_url %}
    {% if settings.share_pinterest %}
      <a target="_blank" href="//pinterest.com/pin/create/button/?url={{ permalink_url }}&amp;media=http:{% if 'product' in template %}{{ product.image_url }}{% else %}{{ post.image_url }}{% endif %}&amp;description={{ share_title }}" class="btn btn-xs btn-primary post-page__share-pinterest share-pinterest" title="Pinear en Pinterest">
        <span class="mdi mdi-pinterest" aria-hidden="true"></span>Pinear</a>
    {% endif %}
  {% endif %}
  {% if settings.share_google %}
    <a target="_blank" href="//plus.google.com/share?url={{ permalink_url }}" class="btn btn-xs btn-primary post-page__share-google share-google" title="+1 en Google Plus">
      <span class="mdi mdi-google-plus" aria-hidden="true"></span>+1 Google</a>
  {% endif %}
  </div>
</div>
